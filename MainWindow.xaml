<Window x:Class="GameRentalManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRentalManagement"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid Background="#1E293B" Width="200" HorizontalAlignment="Left">
            <StackPanel Margin="10">
                <TextBlock Text="Dashboard" FontSize="20" Foreground="White" Margin="0 0 0 20"/>

                <Button Content="Games" Margin="0 5" Click="GamesButton_Click" />
                <Button Content="Customers" Margin="0 5" Click="CustomersButton_Click" />
                <Button Content="Rentals" Margin="0 5" Click="RentalsButton_Click" />
                <Button Content="Returns" Margin="0 5" Click="ReturnsButton_Click" />
                <Button Content="Reports" Margin="0 5" Click="ReportsButton_Click" />

                <Button Content="Logout"
                        Margin="0 30 0 0"
                        Background="#ef4444"
                        Foreground="White"
                        Click="LogoutButton_Click" />
            </StackPanel>
        </Grid>

        
        <ContentControl x:Name="MainContent"
                        Margin="200,0,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
    </Grid>
</Window>
