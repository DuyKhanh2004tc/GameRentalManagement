<Window x:Class="GameRentalManagement.AddRental"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRentalManagement" xmlns:sys="clr-namespace:System;assembly=netstandard"
        mc:Ignorable="d"
        Title="AddRental" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Customer:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cbCustomer" DisplayMemberPath="IdAndName" SelectedValuePath="CustomerId" Margin="0,5"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Game:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cbGame" DisplayMemberPath="GameName" SelectedValuePath="GameId" Margin="0,5"/>

        <TextBlock Grid.Row="2" Grid.Column="0" Text="Due Date:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="2" Grid.Column="1" x:Name="dpDueDate" SelectedDate="{x:Static sys:DateTime.Now}" Margin="0,5"/>

        <TextBlock Grid.Row="3" Grid.Column="0" Text="Quantity:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtQuantity" Margin="0,5"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,76" Grid.Column="1" Grid.RowSpan="5">
            <Button Content="Finish" Width="80" Margin="5" Click="btn_Finish_Click" Height="23"/>
        </StackPanel>
    </Grid>
</Window>
