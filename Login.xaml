<Window x:Class="GameRentalManagement.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameRentalManagement"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="#f0f2f5">
        <Border Background="White" CornerRadius="10" Padding="20" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center" >
            <StackPanel>
                <TextBlock Text="Game Rental System" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0 0 0 20"/>

                <TextBlock Text="Username" FontWeight="SemiBold" Margin="0 0 0 5"/>
                <TextBox x:Name="txtUsername" Height="30" />

                <TextBlock Text="Password" FontWeight="SemiBold" Margin="10 0 0 5"/>
                <PasswordBox x:Name="txtPassword" Height="30" />

                <Button Content="Login"
                        Height="35"
                        Margin="0 20 0 0"
                        Background="#3b82f6"
                        Foreground="White"
                        FontWeight="Bold"
                        Click="LoginButton_Click"/>

                <TextBlock x:Name="lblStatus"
                           Foreground="Red"
                           Margin="0 10 0 0"
                           TextAlignment="Center"
                           Visibility="Collapsed"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
