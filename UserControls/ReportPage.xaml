<UserControl x:Class="GameRentalManagement.UserControls.ReportPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameRentalManagement.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock FontSize="24" FontWeight="Bold" Text="Monthly Revenue Report" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Month:" VerticalAlignment="Center" Width="50"/>
                <ComboBox x:Name="cbMonth" Width="100" Margin="5,0">
                    <ComboBoxItem Content="1"/>
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                    <ComboBoxItem Content="7"/>
                    <ComboBoxItem Content="8"/>
                    <ComboBoxItem Content="9"/>
                    <ComboBoxItem Content="10"/>
                    <ComboBoxItem Content="11"/>
                    <ComboBoxItem Content="12"/>
                </ComboBox>

                <TextBlock Text="Year:" VerticalAlignment="Center" Width="40" Margin="20,0,0,0"/>
                <TextBox x:Name="txtYear" Width="100" Margin="5,0"/>
            </StackPanel>

            <Button Content="Export Venue Report"
                    Width="200" Height="40"
                    Background="LightGreen"
                    Click="ExportToExcel_Click"/>
            <Button Content="Export Borrowed-Returend Report"
                    Width="200" Height="40"
                    Background="LightGreen"
                    Click="ExportMonthlyReportWithSummary_Click"/>

            

            <TextBlock x:Name="txtStatus" Foreground="Green" FontSize="14" Margin="0,20,0,0"/>
        </StackPanel>
        
        
    </Grid>
</UserControl>
